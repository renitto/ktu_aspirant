<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/rounded_corner">



        <TextView
            android:id="@+id/tv_university_mail_department"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="ello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/tv_university_mail_department"
            android:id="@+id/tv_university_mail_email"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorPrimary"
            android:text="ello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_university_contact_email_button"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_university_mail_email"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/ic_email_black_18dp"
            android:padding="5dp"
            android:background="@drawable/rounded_corner"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            android:text="MAIL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




</RelativeLayout>